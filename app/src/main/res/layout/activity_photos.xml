<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PhotosAct">

    <include
        android:id="@+id/layout"
        layout="@layout/include"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/Scrollview"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/Scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/LL1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/nativeads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:layout_constraintBottom_toTopOf="@id/rcView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nativeads"
                tools:listitem="@layout/folderitemlist" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/_10sdp"
        android:outlineProvider="bounds"
        android:outlineSpotShadowColor="#9A9A9A"
        android:paddingTop="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintStart_toEndOf="@id/guideline1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/Home"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/home"
                android:tint="#AEAEAE"
                app:layout_constraintBottom_toTopOf="@id/txtHome"
                app:layout_constraintEnd_toStartOf="@id/Site"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtHome"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Home"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/Home"
                app:layout_constraintStart_toStartOf="@+id/Home"
                app:layout_constraintTop_toBottomOf="@+id/Home" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/Site"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/site"
                android:tint="#AEAEAE"
                app:layout_constraintBottom_toBottomOf="@+id/Home"
                app:layout_constraintEnd_toStartOf="@id/Photos"
                app:layout_constraintStart_toEndOf="@+id/Home"
                app:layout_constraintTop_toTopOf="@+id/Home" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtSite"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Site"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@id/txtHome"
                app:layout_constraintEnd_toEndOf="@+id/Site"
                app:layout_constraintStart_toStartOf="@+id/Site"
                app:layout_constraintTop_toTopOf="@+id/txtHome" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/Photos"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/photos"
                app:layout_constraintBottom_toBottomOf="@id/Site"
                app:layout_constraintEnd_toStartOf="@id/Videos"
                app:layout_constraintStart_toEndOf="@+id/Site"
                app:layout_constraintTop_toTopOf="@+id/Site" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPhotos"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Photos"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@id/txtHome"
                app:layout_constraintEnd_toEndOf="@+id/Photos"
                app:layout_constraintStart_toStartOf="@+id/Photos"
                app:layout_constraintTop_toTopOf="@+id/txtHome" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/Videos"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/videos"
                android:tint="#AEAEAE"
                app:layout_constraintBottom_toBottomOf="@id/Photos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Photos"
                app:layout_constraintTop_toTopOf="@+id/Photos" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtVideos"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Videos"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@id/txtHome"
                app:layout_constraintEnd_toEndOf="@+id/Videos"
                app:layout_constraintStart_toStartOf="@+id/Videos"
                app:layout_constraintTop_toTopOf="@+id/txtHome" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="Home,txtHome" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="Site,txtSite" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupVideos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="Videos,txtVideos" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>