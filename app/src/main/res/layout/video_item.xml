<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:background="@drawable/dialog_bg"
    android:padding="@dimen/_5sdp"
    app:layout_anchorGravity="bottom">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_18sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@color/gray"
                app:layout_constraintBottom_toTopOf="@id/imageName"
                app:layout_constraintEnd_toEndOf="@+id/btnDownload"
                app:layout_constraintStart_toStartOf="@+id/btnPlay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="@dimen/_10sdp"
                app:round="@dimen/_16sdp" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/videoicon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/video_icon"
                app:layout_constraintBottom_toBottomOf="@+id/image"
                app:layout_constraintEnd_toEndOf="@+id/image"
                app:layout_constraintStart_toStartOf="@+id/image"
                app:layout_constraintTop_toTopOf="@+id/image" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/imageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="instagram_1690433260177"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toTopOf="@id/imageSize"
                app:layout_constraintEnd_toEndOf="@+id/image"
                app:layout_constraintStart_toStartOf="@+id/image"
                app:layout_constraintTop_toBottomOf="@+id/image" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/imageSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="Size : 165 KB | JPG Format"
                android:textColor="#888888"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toTopOf="@id/nativeads"
                app:layout_constraintEnd_toEndOf="@+id/imageName"
                app:layout_constraintStart_toStartOf="@+id/imageName"
                app:layout_constraintTop_toBottomOf="@+id/imageName" />

            <LinearLayout
                android:id="@+id/nativeads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:layout_constraintBottom_toTopOf="@id/btnPlay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageSize" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btnPlay"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:background="@drawable/play_bg"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/text_red"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnDownload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nativeads" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btnDownload"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:background="@drawable/download_bg"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Download"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="@+id/btnPlay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnPlay"
                app:layout_constraintTop_toTopOf="@+id/btnPlay" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>