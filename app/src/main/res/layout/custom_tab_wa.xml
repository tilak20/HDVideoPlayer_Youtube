<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/_2sdp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toEndOf="@id/tab_icon"
        android:fontFamily="@font/poppins_semibold"
        android:text="Post"
        android:textColor="@color/txt_tab_selector"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toTopOf="@id/tab_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/tab_icon"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_3sdp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="@+id/tab_text"
        app:layout_constraintStart_toStartOf="@+id/tab_text"
        app:layout_constraintTop_toBottomOf="@id/tab_text"
        app:tint="@color/txt_tab_selector" />

</androidx.constraintlayout.widget.ConstraintLayout>
