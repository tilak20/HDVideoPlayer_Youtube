<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/shapeableImageView"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/folder1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/videoFileName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:round="@dimen/_10sdp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/videoFileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/shapeableImageView"
            android:gravity="start|center_vertical"
            android:maxWidth="@dimen/_200sdp"
            android:paddingStart="@dimen/_10sdp"
            android:singleLine="true"
            android:text="File Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toTopOf="@id/txtModiFied"
            app:layout_constraintEnd_toStartOf="@id/imgMore"
            app:layout_constraintStart_toEndOf="@id/shapeableImageView"
            app:layout_constraintTop_toTopOf="@+id/shapeableImageView"
            app:layout_constraintVertical_chainStyle="spread" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtModiFied"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/videoFileName"
            android:layout_toEndOf="@id/shapeableImageView"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:singleLine="true"
            android:text="Today"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toTopOf="@id/txtDuration"
            app:layout_constraintEnd_toStartOf="@id/imgMore"
            app:layout_constraintStart_toEndOf="@id/shapeableImageView"
            app:layout_constraintTop_toBottomOf="@+id/videoFileName" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtModiFied"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/shapeableImageView"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:singleLine="true"
            android:text="New"
            android:textColor="@color/red"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
            app:layout_constraintEnd_toStartOf="@id/imgMore"
            app:layout_constraintStart_toEndOf="@id/shapeableImageView"
            app:layout_constraintTop_toBottomOf="@+id/txtModiFied" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imgMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_2sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/round_more_vert_24"
            app:layout_constraintBottom_toBottomOf="@+id/videoFileName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/videoFileName"
            app:layout_constraintTop_toTopOf="@+id/videoFileName" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.circularreveal.CircularRevealRelativeLayout>